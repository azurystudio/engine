{
  "compilerOptions": {
    "types": [
      "./env.d.ts",
      "./types.d.ts",
      "./window.d.ts"
    ]
  },
  "fmt": {
    "options": {
      "semiColons": false,
      "singleQuote": true
    }
  },
  "tasks": {
    "test": "deno test -A --fail-fast",
    "build": "cd test && deno run -A https://raw.githubusercontent.com/azurystudio/engine/23c7c5d/build.ts 23c7c5d",
    "publish": "deno task build && npx wrangler publish test/worker.js"
  }
}
